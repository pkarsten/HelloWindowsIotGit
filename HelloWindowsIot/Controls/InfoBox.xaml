<UserControl
    x:Class="HelloWindowsIot.Controls.InfoBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HelloWindowsIot.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    <Grid BorderBrush="White" BorderThickness="6" CornerRadius="12" Padding="12">
        <StackPanel Orientation="Vertical">
            <TextBlock x:Name="MyTime" Text="22:11:33" FontSize="36" FontFamily="Cambria"></TextBlock>
            <TextBlock Text="Nächste Termine:" FontSize="20" FontFamily="Segoe UI"></TextBlock>
            <TextBlock x:Name="MyEvents" TextWrapping="Wrap" Text="Datum Subject " FontSize="20" FontFamily="Segoe UI"></TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
