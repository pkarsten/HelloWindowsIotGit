<Page
    x:Class="HelloWindowsIot.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HelloWindowsIot"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Resources>
        <local:NegateBooleanConverter x:Key="inverter"/>
    </Page.Resources>
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" >
        <Grid.RowDefinitions >
            <RowDefinition Height="80"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Viewbox Height="80" x:Name="headerImage"  Grid.Row="0"
                     RelativePanel.AlignHorizontalCenterWithPanel="True">
            <SymbolIcon Symbol="Setting" />
        </Viewbox>
        <TextBlock x:Name="PageTitle" Grid.Row="1" HorizontalAlignment="Center"></TextBlock>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="2">
            <RelativePanel HorizontalAlignment="Center" >
                <ItemsControl
                          Margin="0,12,0,0"
                          IsTabStop="False">
                    <ItemsControl.Resources>
                        <Style TargetType="Button">
                            <Setter Property="Margin" Value="0,0,0,12" />
                            <Setter Property="HorizontalAlignment" Value="Stretch" />
                        </Style>
                    </ItemsControl.Resources>

                    <ItemsControl.ItemContainerTransitions>
                        <TransitionCollection>
                            <EntranceThemeTransition IsStaggeringEnabled="False"
                                                 FromVerticalOffset="100" />
                        </TransitionCollection>
                    </ItemsControl.ItemContainerTransitions>

                    <TextBlock x:Uid="txtTimeIntervalForPicSearch" Text="Time Interval for Search Pictures" Margin="0,10,0,0"></TextBlock>
                    <!-- How bind ! invert booean -->
                    <ComboBox x:Name="timeBoxForSearchPictures"
                          IsEnabled="{Binding IsOn, ElementName=switchSetWallpaper, Converter={StaticResource inverter}, Mode=TwoWay}"
                          ItemsSource="{Binding SearchPicturesTimeCollection}"
                          DisplayMemberPath="TName"
                          HorizontalAlignment="Stretch"
                          SelectionChanged="timeBoxForSearchPictures_SelectionChanged"
                          >
                    </ComboBox>

                    <TextBlock x:Uid="txtTimeIntervalForChangeWallpaper" Text="Time Intervall for Change Wallpaper" Margin="0,10,0,0" ></TextBlock>

                    <ComboBox x:Name="timeComboBox"
                          IsEnabled="{Binding IsOn, ElementName=switchSetWallpaper,Converter={StaticResource inverter}, Mode=TwoWay}"
                          ItemsSource="{Binding TimeCollection}"
                          DisplayMemberPath="TName"
                          HorizontalAlignment="Stretch"
                          SelectionChanged="timeComboBox_SelectionChanged"
                          ></ComboBox>
                    <ToggleSwitch x:Name="switchSetWallpaper" Margin="0,20,0,0" Toggled="ApplySettings_Click"><TextBlock x:Uid="txtSwitchSetWallpaper">loll</TextBlock></ToggleSwitch>
                    <ToggleSwitch x:Name="tooglelogging" Margin="0,20,0,0" Toggled="Logging_Click">Logging</ToggleSwitch>
                </ItemsControl>
            </RelativePanel>
        </ScrollViewer>
    </Grid>
</Page>
